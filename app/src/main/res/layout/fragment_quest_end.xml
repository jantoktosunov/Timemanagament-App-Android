<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/quest_end_txt_header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/header_rectangle"
        android:gravity="center"
        android:text="@string/final_score"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_quest_end_final_score"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="31dp"
        android:text=""
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/your_score_txt_v"
        app:layout_constraintTop_toBottomOf="@+id/quest_end_txt_header" />

    <TextView
        android:id="@+id/your_score_txt_v"
        android:layout_width="106dp"
        android:layout_height="70dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="31dp"
        android:text="@string/your_score"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quest_end_txt_header" />

</android.support.constraint.ConstraintLayout>